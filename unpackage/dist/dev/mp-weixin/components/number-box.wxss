
.uni-numbox {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	height: 60rpx;
}
.uni-numbox-minus,
.uni-numbox-plus {
	margin: 0;
	background-color: #f8f8f8;
	width: 60rpx;
	height:100%;
	line-height: 60rpx;
	text-align: center;
	color: #555555;
}
.uni-numbox-minus {
	border: 2rpx solid #cccccc;
	border-right: none;
	border-top-left-radius: 6rpx;
	border-bottom-left-radius: 6rpx;
	border-style:none;
	border:none;
	border-right: 5rpx solid white;
}
.uni-numbox-plus {
	border: 2rpx solid #cccccc;
	border-left: none;
	border-top-right-radius: 6rpx;
	border-bottom-right-radius: 6rpx;
	border-style:none;
	border:none;
	border-left: 5rpx solid white;
}
.uni-numbox-value {
	border: 2rpx solid #cccccc;
	background-color: #ffffff;
	width: 60rpx;
	height: 100%;
	font-size:25rpx;
	text-align: center;
	border:none;
	background-color: #f7f7f7;
}
.uni-numbox-disabled {
	color: #c0c0c0;
}
input{
	min-height: 0;
	line-height: 60rpx;
	padding: 0;
}

