page{
	background-color: white;
}
.nav{
	position: fixed;
	top:0;
	bottom: 0;
	left:0;
	width:179rpx;
	border-right: 1rpx solid #EEEEEE;
	overflow: auto;
}
.content{
	width:570rpx;
	padding-left: 180rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-box-align: start;
	-webkit-align-items: flex-start;
	        align-items: flex-start;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.nav-item{
	width:100%;
	height:80rpx;
	line-height: 80rpx;
	text-align: center;
	border-bottom: 1rpx solid #EEEEEE;
	font-size: 26rpx;
	color:#666666;
}
.nav-item-active{
	border-left:5rpx solid #333333;
	width:174rpx;
	font-size: 26rpx;
	background-color: #F5F5F5;
	color:black;
}
.content-title{
	width:540rpx;
	text-align: center;
	height:100rpx;
	line-height: 100rpx;
	font-size: 24rpx;
	position: relative;
}
.details{
	width:200rpx;
	height:100rpx;
	position: absolute;
	right: 0;
	top:0;
	font-size: 20rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: end;
	-webkit-justify-content: flex-end;
	        justify-content: flex-end;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	color:#999999;
}
.details > image{
	width:30rpx;
	height:30rpx;
}
.content-item{
	width:140rpx;
	height:200rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	margin-bottom: 40rpx;
	margin-left: 40rpx;
}
.img{
	width: 140rpx;
	height:140rpx;
}
.goods-name{
	width:140rpx;
	height:60rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 20rpx;
}

