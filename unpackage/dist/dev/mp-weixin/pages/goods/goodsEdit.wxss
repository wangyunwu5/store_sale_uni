	color: #666666;
	background-color: white;
}
.nav_item_active {
	width: 160rpx;
	font-size: 22rpx;
	background-color: #F5F5F5;
	color: #d81e06;
}
.addgoods{
	height: 80rpx;
	line-height: 80rpx;
	text-align: center;
	width: 160rpx;
	position: absolute;
	background-color: #d81e06;
	color: #FFFFFF;
	font-size: 25rpx;
	border-radius: 8rpx;
	left: 0;
	bottom: 0;
	z-index: 2;
}
