	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	        flex: 1;
	background-color: #EEEEEE;
	height: 100%;
	padding: 1rpx;
}
