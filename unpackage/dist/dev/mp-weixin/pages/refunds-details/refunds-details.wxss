page{
	background-color: white;
}
.head,.user-info{
	padding:0 30rpx;
	width:690rpx;
	height:200rpx;
	background-color: #B59F78;
	color:white;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
	-webkit-box-align:center;
	-webkit-align-items:center;
	        align-items:center
}
.head{
	width:660rpx;
	padding-right: 60rpx;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.head > image{
	width:120rpx;
	height:120rpx;
}
.user-info{
	width:690rpx;
	padding:20rpx 30rpx;
	font-size: 30rpx;
	height:110rpx;
	background-color: white;
	color:#222222;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
}
.user-info > view{
	width:690rpx
}
.goods,.order-info,.bottom{
	width:690rpx;
	padding:0 30rpx;
	min-height:200rpx;
}
.goods-info{
	width:690rpx;
	background-color: #f7f7f7;
	min-height:210rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin-bottom: 20rpx;
	margin-top:10rpx;
}
.image{
	width:170rpx;
	height:170rpx;
	margin:20rpx;
}
.parm{
	width:480rpx;
	min-height: 210rpx;
}
.price{
	color:#FA7834;
}
.goods-name,.goods-parm,.goods-price{
	width:460rpx;
	min-height: 70rpx;
}
.goods-name,.goods-price{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 30rpx;
}
.goods-name{
	height:60rpx;
	font-size: 32rpx;
}
.goods-parm{
	color:#999999;
	font-size: 30rpx;
}
.goods-price{
	font-size:28rpx;
}
.num{
	font-size: 26rpx;
	color:#999999;
}
.order-info{
	margin-top:20rpx;
	padding-bottom: 100rpx;
}
.order-info > view{
	width:690rpx;
	font-size:30rpx;
	color:#999999;
	padding:5rpx 0;
}
.express{
	width:100rpx;
	background-color: #FA7834; 
	color:white;
	padding:8rpx 20rpx;
	border-radius: 50rpx;
	font-size:26rpx;
	margin-left: 10rpx;
}
.btnCancel{
	position: fixed;
	width:375rpx;
	height:90rpx;
	left:0;
	bottom:0;
	color:black;
	z-index:10;
	text-align: center;
	line-height: 90rpx;
	font-size: 34rpx;
	border-top:1rpx solid #eeeeee;
}
.btnConfirm{
	position: fixed;
	width:375rpx;
	height:90rpx;
	right:0;
	bottom:0;
	color:white;
	background-color: #F97834;
	z-index:10;
	text-align: center;
	line-height: 90rpx;
	font-size: 34rpx;
	border-top:1rpx solid #eeeeee;
}

